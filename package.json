{
  "name": "opium-v2-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "prepare:arbitrumTestnet": "cat ./config/${NETWORK:-arbitrumTestnet}.json | mustache  - subgraph.template.yaml > subgraph.yaml",
    "prepare:ganache": "cat ./config/${NETWORK:-ganache}.json | mustache  - subgraph.template.yaml > subgraph.yaml",
    "prepare:goerli": "cat ./config/${NETWORK:-goerli}.json | mustache  - subgraph.template.yaml > subgraph.yaml",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "NETWORK=arbitrum-rinkeby graph deploy --node https://api.thegraph.com/deploy/ RiccardoBiosas/opium-v2-subgraph",
    "create-local": "graph create --node http://localhost:8020/ RiccardoBiosas/opium-v2-subgraph",
    "remove-local": "graph remove --node http://localhost:8020/ RiccardoBiosas/opium-v2-subgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 RiccardoBiosas/opium-v2-subgraph"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.25.3",
    "@graphprotocol/graph-ts": "0.24.1"
  },
  "devDependencies": {
    "mustache": "^4.2.0"
  }
}
